{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "declaration": true,
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "plugins": [
      { "transform": "../../scripts/scss-extension-transformer.ts" },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customRenderer": "../../scripts/compile/sass-custom-renderer.js",
          "rendererOptions": {
            "sass": {
              "loadPaths": ["./node_modules"]
            }
          }
        }
      }
    ]
  }
}
