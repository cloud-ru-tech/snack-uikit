{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@snack-uikit/*": ["./packages/*/src"]
    },
    "target": "ES2018",
    "lib": ["es2017", "dom", "dom.iterable", "esnext"],
    "types": ["node", "vitest/globals", "@types/dom-close-watcher"],
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
